{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "jsx": true
    },
    "rules": {
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "class-methods-use-this": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "indent": [
            "error",
            4
        ],
        "keyword-spacing": [
            "error",
            {
                "overrides": {
                    "if": {
                        "after": false
                    },
                    "switch": {
                        "after": false
                    },
                    "for": {
                        "after": false
                    },
                    "while": {
                        "after": false
                    },
                    "catch": {
                        "after": false
                    }
                }
            }
        ],
        "max-len": [
            "error",
            120
        ],
        "no-await-in-loop": "off",
        "no-continue": "off",
        "no-loop-func": "off",
        "no-mixed-operators": "off",
        "no-prototype-builtins": "off",
        "no-restricted-syntax": [
            "off",
            {
                "selector": "ForOfStatement"
            }
        ],
        "no-shadow": "off",
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/prefer-stateless-function": "off",
        "spaced-comment": [
            "error",
            "always",
            {
                "exceptions": [
                    "*"
                ]
            }
        ]
    }
}
